
// Define executors options

// executor {

//   $slurm {
//       queueSize = 100
//       submitRateLimit = '10sec'
//   }

//   $local {
//       cpus = 4
//   }
// }

profiles {

    standard {
        process.executor = 'local'
        process.cpus = 4
    }

    cluster {
        process {
            
            executor = 'slurm'
            
            withLabel: 'q6h' {
                time = '06:00:00'
                cpus = 8
                memory = '16G'
                clusterOptions = '--qos=6hours'
            }

            withLabel: 'q30m' {
                time = '00:30:00'
                cpus = 8
                memory = '16G'
                clusterOptions = '--qos=30min'
            }

            withLabel : 'gpu_q6h' {
                time = '06:00:00'
                cpus = 1
                memory = '16G'
                clusterOptions = '--partition=pascal --gres=gpu:1 --qos=6hours'
            }
        }
    }
}

// generate report of the run
report {
    enabled = true
    file = 'reports/report.html'
}
